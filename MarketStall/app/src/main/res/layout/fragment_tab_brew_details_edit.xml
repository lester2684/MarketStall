<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.tab_fragments.FragmentTabItemDetails">

    <RelativeLayout
        android:id="@+id/relative_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_icon_margin_16"
        android:layout_marginStart="@dimen/form_icon_margin_16"
        android:layout_marginEnd="@dimen/form_icon_margin_16">

        <ImageView
            android:id="@+id/icon_name"
            android:layout_width="@dimen/form_icon_size_24"
            android:layout_height="@dimen/form_icon_size_24"
            android:layout_marginEnd="@dimen/form_icon_margin_16"
            android:layout_centerVertical="true"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon_name">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:hint="@string/text_name" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_icon_margin_16"
        android:layout_marginStart="@dimen/form_icon_margin_16"
        android:layout_marginEnd="@dimen/form_icon_margin_16">

        <ImageView
            android:id="@+id/icon_price"
            android:layout_width="@dimen/form_icon_size_24"
            android:layout_height="@dimen/form_icon_size_24"
            android:layout_marginEnd="@dimen/form_icon_margin_16"
            android:layout_centerVertical="true"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon_price"
            android:layout_centerVertical="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/text_price" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

</LinearLayout>